global !p

def print_doc(snip, text):
	args = text.split(',')
	try:
		args = [a.strip(' ').split('=')[0] for a in args if a!="self"]
	except IndexError:
		pass
	for a in args:
		if len(a) > 0:
			snip.rv += snip.mkline("\t:param ".expandtabs(4)+a+":\n")
	snip.rv += snip.mkline("\t:return:".expandtabs(4))

endglobal


